{
  "rules": {
    "prettier/prettier": 2,
    "linebreak-style": 0,
    "indent": ["error", 2],
    "no-console": 1,
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  }
}